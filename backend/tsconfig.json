{
  "compilerOptions": {
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": false,
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "allowJs": true,
    "outDir": "./build"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*",
    "middleware/setupAls.middleware.ts"
  ]
}