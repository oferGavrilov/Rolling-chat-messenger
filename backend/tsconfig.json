{
  "compilerOptions": {
      "module": "es2020",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "allowJs": true,
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      },
      "typeRoots": ["node_modules/@types", "src/types"],
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build"]
  }